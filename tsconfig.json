{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "build",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "include": ["src"]
}

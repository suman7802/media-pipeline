{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "rootDir": "./src",
        "outDir": "build",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}
